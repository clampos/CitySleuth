<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cerulean - a fast, free travel recommendation app</title>
    <link rel="stylesheet" href="stylesheets/styles.css" />
  </head>
  <body>
    <header>
      <h1>Cerulean - a fast, free travel recommendation app</h1>
    </header>
    <div class="dropdown-menu-right">
      <button onclick="dropdownFunc()" class="dropbtn">Menu</button>
      <div id="menu" class="dropdown_menu">
        <a href="#">Update Profile</a>
        <a href="#">Contact</a>
        <a href="/logout">Logout</a>
      </div>
    </div>
    <div class="parent">
      <div class="welcome">
        <h3>Hello, <%=username%>!</h3>
        <p>
          You have successfully logged in. Please wait while we build the site.
        </p>
      </div>
    </div>
    <script>
      /* When the user clicks on the button, 
      toggle between hiding and showing the dropdown content */
      function dropdownFunc() {
        document.getElementById("menu").classList.toggle("show");
      }

      // Close the dropdown if the user clicks outside of it
      window.onclick = function (event) {
        if (!event.target.matches(".dropbtn")) {
          var dropdowns = document.getElementsByClassName("dropdown_menu");
          var i;
          for (i = 0; i < dropdowns.length; i++) {
            var openDropdown = dropdowns[i];
            if (openDropdown.classList.contains("show")) {
              openDropdown.classList.remove("show");
            }
          }
        }
      };
    </script>
  </body>
</html>
